@model QuizTest.Models.Test

<form method="post" asp-action="DeletePost" enctype="multipart/form-data">
    <div class="border p-4">


        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-info pl-3">Удалить викторину</h2>
        </div>
        <input hidden asp-for="Id" class="form-control w-100" />
        <div class="row">
            <div class="col-10">
                <div class="form-group row" style="margin-bottom:5px">
                    <div class="col-4">
                        <label>Название</label>
                    </div>
                    <div class="col-8">
                        <input disabled asp-for="Name" class="form-control w-100" />
                    </div>
                </div>

                <div class="form-group row" style="margin-bottom:10px">
                    <div class="col-4">
                        Картинка
                    </div>
                    <div class="col-8">                       
                        <img src="@Constants.ImagePath@Model.Image" width="220" style="border-radius:5px; border:1px solid #bbb; margin-top:7px; margin-bottom:10px;" />
                    </div>                   

                    <div class="form-group row">
                        <div class="col-8 offset-4 row">

                            <div class="col">
                                <input type="submit" class="btn btn-danger w-100" value="Удалить" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-info w-100">
                                    Назад
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @* Keep this empty *@
                </div>
            </div>
        </div>
    </div>

</form>


@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }    
}
