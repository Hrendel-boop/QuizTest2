@model IEnumerable<QuizTest.Models.Test>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список Викторин</h2>
        </div>
        <div class="col-6 text-lg-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="fa-solid fa-plus"></i> Добавить Викторину
            </a>
        </div>
    </div>

    @if (Model.Count() > 0)
    {
        <table style="margin-top:30px" class="table table-bordered table-striped">
            <thread>
                <tr>
                    <th>
                        Название
                    </th>
                    <th>
                        Id
                    </th>
                    <th></th>
                </tr>
                <tbody>
                    @foreach (var obj in Model)
                    {
                        <tr>
                            <td width="50%">@obj.Name</td>
                            <td width="30%">@obj.Id</td>
                            <td class="text-center">
                                <div class="btn-group" role="group">

                                    <a asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger">Удалить</a>
                                    <a asp-action="Edit" asp-route-Id="@obj.Id" class="btn btn-primary">Изменить</a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </thread>
        </table>
    }
    else
    {
        <h1>База данных не найдена!</h1>
    }
</div>