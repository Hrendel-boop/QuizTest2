@model QuizTest.Models.ViewModels.HomeVM

<form method="post" asp-action="DetailsPost">
    <div class="border p-4">


        @*<div asp-validation-summary="ModelOnly" class="text-danger"></div>*@
        <div class="form-group row">
            <h2 class="text-info pl-3">Викторина</h2>
        </div>

        <input hidden asp-for="@Model.QuestionCount"/>
        <input hidden asp-for="@Model.RightAnswersCount" />
        <input hidden asp-for="@Model.Answer" />
        <input hidden asp-for="@Model.Question" />

        @for (int i = 0; i < Model.Question.Name.Length; i++)
        {           
        <input hidden asp-for="@Model.Question.Name[i]" />
        <input hidden asp-for="@Model.Question.CorrectAnswer[i]" />
        <input hidden asp-for="@Model.Question.IncorrectAnswer[i]" />
        }
        <div class="row">
            <div class="col-10">

                   @* <div class="col-4">
                        Картинка
                    </div>
                    <div class="col-8">
                        <input formenctype="multipart/form-data" type="file" name="files" id="uploadBox" multiple asp-for="Test.Image" class="form-control w-100" />
                        <img id="vImg" src="" width="220" style="border-radius:5px; border:1px solid #bbb; margin-top:7px; margin-bottom:10px;" />
                    </div>*@

                @{
                    int queNum = Model.QuestionCount + 1;
                }
                <div class="form-group row" style="margin-bottom:5px">
                    <div class="col-4">
                        <label>Вопрос @queNum / @Model.Question.Name.Length</label>
                    </div>
                    <div class="col-8">
                        <label>@Model.Question.Name[Model.QuestionCount]</label>
                    </div>

                </div>

                <div class="form-group row" style="margin-bottom:5px">
                    <div class="col-4">
                        
                    </div>
                    <div class="col-8">
                        <input type="radio" class="btn-check" name="options" id="option1" autocomplete="off" checked>
                        <label class="btn btn-secondary" for="option1">@Model.Question.CorrectAnswer[Model.QuestionCount]</label>

                        <input type="radio" class="btn-check" name="options" id="option2" autocomplete="off">
                        <label class="btn btn-secondary" for="option2">@Model.Question.IncorrectAnswer[Model.QuestionCount]</label>
                    </div>

                </div>

                <div class="form-group row" style="margin-bottom:10px">

                    <div class="form-group row">
                        <div class="col-8 offset-4 row">

                            <div class="col">
                                <input type="submit" class="btn btn-success w-100" value="Далее" />
                            </div>
                            <div class="col">
                                <a asp-action="Index" class="btn btn-info w-100">
                                    Выйти
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-4">
                    @* Keep this empty *@
                </div>
            </div>
        </div>
    </div>

</form>